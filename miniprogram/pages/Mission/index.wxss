.background {
  width: 70vw;
  margin-top: 5vh;
}

.title {
  margin-top: 20px;
  font-size: 17px;
  font-weight: bold;
}
.subtitle {
  margin-top: 9px;
  font-size: 12px;
}

/* Mission Dashboard */
.mission-dashboard {
  margin: 20px 20px 10px;
  padding: 25px;
  background: white;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.mission-dashboard::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6px;
  height: 100%;
  background: linear-gradient(to bottom, #a1c4fd 0%, #c2e9fb 100%);
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
}

.dashboard-title {
  font-size: 18px;
  font-weight: 900;
  color: #333;
  letter-spacing: 1px;
}

.dashboard-stats {
  display: flex;
  align-items: center;
}

.stat-item {
  text-align: center;
  padding: 0 15px;
}

.stat-num {
  font-size: 24px;
  font-weight: 800;
  color: #2c3e50;
  line-height: 1;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 10px;
  color: #999;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-weight: 600;
}

.divider {
  width: 1px;
  height: 30px;
  background: #eee;
}

/* 列表项优化 - 悬浮卡片 */
.form-cell {
  padding: 0;
  margin-bottom: 15px; /* 增加间距 */
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0,0,0,0.03);
  transition: transform 0.2s;
}

.form-cell:active {
  transform: scale(0.98);
}

.slide {
  display: flex;
  align-items: center;
  padding: 20px;
  position: relative;
  background: white; /* 保持纯白背景突出干净感 */
}

/* 头像微调 */
.author-avatar {
  width: 54px;
  height: 54px;
  border-radius: 18px; /* 方圆形 */
  margin-right: 15px;
  background-color: #f0f0f0;
  box-shadow: 0 4px 8px rgba(0,0,0,0.05);
}

.mission-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.mission-info_title {
  font-size: 16px;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 6px;
}

.mission-info_date {
  font-size: 12px;
  color: #95a5a6;
  background: #f8f9fa;
  padding: 2px 8px;
  border-radius: 10px;
  align-self: flex-start;
}

.mission-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.credit-tag {
  background: #f0f9eb;
  color: #67c23a;
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: bold;
  margin-bottom: 5px;
}

.credit-tag.done {
  background: #f4f4f5;
  color: #909399;
}

.star {
  width: 20px;
  height: 20px;
}

/* 滑动按钮背景色 */
.markBtn .weui-slideview__btn {background-color: #95d475;}
.starBtn .weui-slideview__btn {background-color: #fac858;}
.removeBtn .weui-slideview__btn {background-color: #ff8e8e;}

