/* 悬浮按钮 - Cool Silver */
.btn-normal{
  margin: 0;
  color: #fff;
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  border-radius: 30px;
  padding: 0 16px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 15px rgba(56, 249, 215, 0.4);
  border: none;
  transition: all 0.3s ease;
  z-index: 1000;
  letter-spacing: 1px;
}

.btn-hover{
  transform: scale(0.95);
  box-shadow: 0 2px 8px rgba(255, 154, 158, 0.3);
}

.btn-text {
  font-size: 13px;
  font-weight: 600;
  margin-left: 4px;
  color: #fff;
}

.btn-icon {
  width: 18px;
  height: 18px;
}

.search-bar {
  position: relative;
  width: 100%;
  display: flex;
  box-sizing: border-box;
  background-color: #F0F2F5; /* 更柔和的背景 */
  border-radius: 20px; /* 全圆角 */
  padding: 5px 10px;
  align-items: center;
}
.search-input {
  flex: 1;
  height: 28px;
  line-height: 28px;
  font-size: 14px;
  margin-left: 8px;
}
.search-icon {
  margin-left: 5px;
}
