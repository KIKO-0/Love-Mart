/* 列表项优化 - 悬浮卡片 */
.form-cell {
  padding: 0;
  margin-bottom: 15px; /* 增加间距 */
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0,0,0,0.03);
  transition: transform 0.2s;
}

.form-cell:active {
  transform: scale(0.98);
}

.slide {
  display: flex;
  align-items: center;
  padding: 20px;
  position: relative;
  background: white;
}

/* 盲盒入口 Banner */
/* 盲盒入口 Banner (3D Redesign) */
.blind-box-banner {
  margin: 10px 20px;
  padding: 0 25px;
  height: 100px;
  background: radial-gradient(circle at 80% 50%, #dbe7fc 0%, #E0EAFC 100%);
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 
    0 10px 20px rgba(161, 196, 253, 0.3),
    inset 0 0 0 1px rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: hidden;
}

.blind-box-banner::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.4) 0%, transparent 60%);
  z-index: 0;
}

.banner-content {
  z-index: 1;
  display: flex;
  flex-direction: column;
}

.banner-title {
  font-size: 14px;
  letter-spacing: 2px;
  font-weight: 800;
  color: #a1c4fd;
  margin-bottom: 2px;
}

.banner-subtitle {
  font-size: 20px;
  font-weight: 900;
  color: #2c3e50;
  margin-bottom: 6px;
  text-shadow: 0 2px 5px rgba(161, 196, 253, 0.2);
}

.banner-chip {
  font-size: 10px;
  color: #fff;
  background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
  padding: 4px 10px;
  border-radius: 10px;
  display: inline-block;
  align-self: flex-start;
  font-weight: 700;
  box-shadow: 0 2px 5px rgba(161, 196, 253, 0.4);
}

/* Mini 3D Scene */
.mini-scene {
  width: 80px;
  height: 80px;
  perspective: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.mini-cube {
  width: 50px;
  height: 50px;
  position: relative;
  transform-style: preserve-3d;
  transform: rotateX(-20deg) rotateY(30deg);
  animation: miniFloat 3s ease-in-out infinite;
}

.face {
  position: absolute;
  width: 50px;
  height: 50px;
  background: rgba(255, 255, 255, 0.95);
  border: 1px solid #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: inset 0 0 10px rgba(161, 196, 253, 0.3);
}

.face.front  { transform: translateZ(25px); background: linear-gradient(135deg, #fff 0%, #e0eafc 100%); font-size: 24px; font-weight: 900; color: #a1c4fd; }
.face.back   { transform: rotateY(180deg) translateZ(25px); background: #f5f7fa; }
.face.right  { transform: rotateY(90deg) translateZ(25px); background: #e0eafc; }
.face.left   { transform: rotateY(-90deg) translateZ(25px); background: #e0eafc; }
.face.top    { transform: rotateX(90deg) translateZ(25px); background: #fff; }
.face.bottom { transform: rotateX(-90deg) translateZ(25px); background: #cfdef3; box-shadow: 0 0 15px rgba(161, 196, 253, 0.5); }

@keyframes miniFloat {
  0%, 100% { transform: rotateX(-20deg) rotateY(30deg) translateY(0); }
  50% { transform: rotateX(-20deg) rotateY(30deg) translateY(-8px); }
}

