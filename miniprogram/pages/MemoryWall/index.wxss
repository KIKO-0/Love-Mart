.wall-container {
  min-height: 100vh;
  background: #f0f2f5;
  padding: 20px 10px;
  box-sizing: border-box;
}

.header {
  margin-bottom: 20px;
  padding-left: 10px;
}

.title {
  font-size: 28px;
  font-weight: bold;
  color: #333;
  display: block;
}

.subtitle {
  font-size: 14px;
  color: #999;
  letter-spacing: 1px;
}

/* Masonry Layout */
.masonry {
  display: flex;
  justify-content: space-between;
}

.column {
  width: 48%;
  display: flex;
  flex-direction: column;
}

.polaroid {
  background: white;
  padding: 10px;
  padding-bottom: 15px;
  border-radius: 4px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.05);
  margin-bottom: 15px;
  transition: transform 0.3s;
}

.polaroid:active {
  transform: scale(0.98);
}

.photo {
  width: 100%;
  border-radius: 2px;
  background: #eee;
}

.caption {
  font-family: 'Courier New', Courier, monospace;
  font-size: 12px;
  color: #555;
  margin-top: 10px;
  text-align: center;
}

/* FAB */
.fab {
  position: fixed;
  bottom: 40px;
  right: 30px;
  width: 60px;
  height: 60px;
  background: #333;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 5px 20px rgba(0,0,0,0.3);
  z-index: 100;
}

.fab-icon {
  color: white;
  font-size: 30px;
  margin-top: -4px;
}

.empty-state {
  text-align: center;
  color: #999;
  margin-top: 100px;
}

/* Card Styles */
.meta-row {
  display: flex;
  justify-content: flex-end;
  margin-top: 5px;
}

.date-chip {
  font-size: 10px;
  color: #999;
  background: #f5f5f5;
  padding: 2px 6px;
  border-radius: 4px;
}

/* Modal Mask */
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(5px);
}

/* Upload Modal */
.upload-modal {
  width: 80%;
  background: white;
  border-radius: 20px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
}

.upload-preview {
  width: 100%;
  height: 200px;
  border-radius: 10px;
  margin-bottom: 15px;
  background: #eee;
}

.upload-input {
  width: 100%;
  height: 80px;
  background: #f9f9f9;
  border-radius: 10px;
  padding: 10px;
  box-sizing: border-box;
  font-size: 14px;
  margin-bottom: 20px;
}

.modal-actions {
  display: flex;
  width: 100%;
  justify-content: space-between;
}

.btn-cancel, .btn-confirm {
  width: 45%;
  font-size: 14px;
  border-radius: 20px;
}

.btn-cancel {
  background: #f0f0f0;
  color: #666;
}

.btn-confirm {
  background: #333;
  color: white;
}

/* Lightbox Modal */
.lightbox-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.95);
  z-index: 300;
  display: flex;
  align-items: center;
  justify-content: center;
}

.lightbox-content {
  width: 90%;
  max-height: 90vh;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.lightbox-img {
  width: 100%;
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.5);
}

.lightbox-info {
  width: 100%;
  margin-top: 15px;
  color: white;
  text-align: center;
}

.lightbox-date {
  font-size: 12px;
  opacity: 0.6;
  margin-bottom: 8px;
  letter-spacing: 1px;
}

.lightbox-text {
  font-size: 16px;
  line-height: 1.5;
  margin-bottom: 20px;
}

.delete-btn {
  display: inline-block;
  padding: 8px 20px;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 20px;
  color: rgba(255, 71, 87, 1); /* Red */
  font-size: 14px;
  background: rgba(0,0,0,0.3);
}

.close-lightbox {
  position: absolute;
  top: -40px;
  right: 0;
  color: white;
  font-size: 30px;
  font-weight: bold;
  opacity: 0.8;
}
